@model tp6.ViewModel.CadeteViewModel

<br />
<div class="card">
    <div class="header pt-3 blue-gradient">
        <div class="row d-flex justify-content-center">
            <h3 class="white-text mb-3 pt-3 font-weight-bold">Alta Cadete</h3>
        </div>
    </div>
    <div class="card-body mx-4 mt-4">

            <form class="text-center" style="color: #757575;" asp-action="Modificar" method="post">
                <input type="hidden" value="@Model.Id" asp-for="Id" />
                <div class="md-form">
                    <input class="form-control" type="text" asp-for="Nombre" value="@Model.Nombre">
                    <label asp-for="Nombre">Nombre</label>
                </div>
                <div class="md-form">
                    <input class="form-control" type="text" asp-for="Direccion" value="@Model.Direccion">
                    <label asp-for="Direccion">Direccion</label>
                </div>
                <div class="md-form">
                    <input class="form-control" type="text" asp-for="Telefono" value="@Model.Telefono">
                    <label asp-for="Telefono">Telefono</label>
                </div>
                <div class="md-form">
                    <select asp-for="TipoT" value="@Model.TipoT">
                        <option value="0">Auto</option>
                        <option value="1">Moto</option>
                        <option value="2">Bicicleta</option>
                    </select>
                </div>
                <button class="btn btn-outline-info btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Enviar</button>
            </form>
        </div>
    </div>
